#include <iostream>
using namespace std;



int main() 
{
	setlocale(0, "");
	while (true)
	{
		
		int a;
		int b = 1;
		cout << "[0] Выйти\n";
		cout << "[+] Введите число: ";
		cin >> a;
		if (a >= 1 && a <= 15)
		{
			while (b <= a)
			{
				cout << "Цикл отработал. Круг: " << b << endl;
				b = b + 1;
			}
		}
		if (a < 0)
		{
			system("cls");
			continue;
		}
		if (a > 15)
		{
			system("cls");
			continue;
		}
		if (a == 0)
		{
			break;
		}
	}
}
